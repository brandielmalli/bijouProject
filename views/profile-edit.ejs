<!doctype html>
<html>
<head>
  <title>Bijou Nightclub</title>
  <link rel="stylesheet" href="style.css">
</head>
<body>
<section>
  <h1>Edit Profile</h1>
  <form class="" action="/users" method="post">
    <label for="name">Name</label>
    <input type="text" placeholder="name" name="name" value="<%= user.name %>">
    <br>
    <label for="email">Email</label>
    <input type="text" placeholder="email" name="email" value="<%= user.local.email %>">
    <br>
    <label for="address">Address</label>
    <input type="text" placeholder="address" name="address" value="<%= user.address %>">
    <br>
    <label for="city">City</label>
    <input type="text" placeholder="city" name="city" value="<%= user.city %>">
    <br>
    <label for="state">State</label>
    <input type="text" placeholder="state" name="state" value="<%= user.state %>">
    <br>
    <label for="zip code">Zip Code</label>
    <input type="text" placeholder="zip_code" name="zip" value="<%= user.zip_code %>">
    <br>
    <button type="submit" name="button">Update Profile</button>
  </form>
</section>

<a href ="/profile"><button type="button" name="viewProfile">View Profile</button></a>

<a href="/reserve"><button type="button" name="reserveTable">Reserve Table</button></a>


      <script src="js/profile-edit.js"></script>

    </body>
    </html>
